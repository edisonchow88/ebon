<?xml version="1.0"?>
<extension>
    <id>default_skrill</id>
    <version>1.0.1</version>
	<type>payment</type>
	<category>payment</category>
    <cartversions>
        <item>1.2</item>
    </cartversions>
    <layout></layout>
    <priority>10</priority>
