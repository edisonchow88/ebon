	    <item id="default_skrill_location_id">
            <type>selectbox</type>
			<variants>
				<item>0</item>
				<data_source>
                   <model_rt>localisation/location</model_rt>
                   <method>getLocations</method>
				</data_source>
				<fields>
					<field>location_id</field>
					<field>name</field>
				</fields>
			</variants>
        </item>
		<item id="default_skrill_redirect_payment">
			<type>hidden</type>
			<default_value>true</default_value>
		</item>
    </settings>
    <help_link><![CDATA[https://account.skrill.com/signup?rid=53571612]]></help_link>
